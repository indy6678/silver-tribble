{
  "manifest_version": 3,
  "name": "blocktivity",
  "version": "0.1.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Content.js"]
    }
  ],
  "permissions": ["activeTab", "webRequest", "webRequestBlocking","https://www.youtube.com/*","https://www.facebook.com/*","https://www.netflix.com/*",
"www.twitter.com/*" ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    
  }
}

