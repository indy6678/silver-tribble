{
  "manifest_version": 3,
  "name": "blocktivity",
  "version": "0.1.1",
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules1",
        "enabled": true
      }
    ],
    "rules": [
      {
        "id": 1,
        "priority": 1,
        "action": {
          "type": "block"
        },
        "condition": {
          "urlFilter": "||google.com/"
        }
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}
