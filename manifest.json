{
  "manifest_version": 3,
  "name": "blocktivity",
  "version": "0.1.1",
  "host_permissions": [ "<all_urls>" ],
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_rule",
        "priority": 1,
        "path": "block_rule.json",  
        "action": {
          "type": "block"
        },
        "condition": {
          "urlFilter": "<all_urls>"
        }
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

