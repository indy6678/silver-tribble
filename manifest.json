{
  "manifest_version": 3,
  "name": "blocktivity",
  "version": "0.1.1",
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ], 
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_rule",
        "priority": 1,
        "background": {
          "service_worker": "background.js"
        },
        "action": {
          "default_popup": "popup.html",
          "type": "block"
        },
        "condition": {
          "urlFilter": "<all_urls>"
        }
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}